	"keywords": [
		"phpgt",
		"webengine",
		"cli",
		"terminal"
	],

	"require": {
		"php": ">=8.0",
		"ext-json": "*",
		"ext-readline": "*",
		"phpgt/daemon": "1.*"
	},
	"require-dev": {
		"phpunit/phpunit": "9.*",
		"phpstan/phpstan": ">=0.12.64"
	},

	"license": "MIT",

	"authors": [
		{
			"name": "Greg Bowler",
			"email": "greg.bowler@g105b.com"
		}
	],

	"autoload": {
		"psr-4": {
			"Gt\\Cli\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Cli\\Test\\": "./test/phpunit"
		}
	}
}
